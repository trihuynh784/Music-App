extends ../../layouts/errors.pug
include ../../mixins/alert.pug

block title 
  title Page Not Found

block main
  +alert-error()

  main.grid.min-h-full.place-items-center.bg-white.px-6.py-24(class="sm:py-32 lg:px-8")
    .text-center
      p.font-semibold.text-indigo-600.text-6xl 404
      h1.mt-4.text-5xl.font-semibold.tracking-tight.text-balance.text-gray-900(class="sm:text-7xl") Page not found
      p.mt-6.text-lg.font-medium.text-pretty.text-gray-500(class="sm:text-xl/8") Sorry, we couldn’t find the page you’re looking for.
      .mt-10.flex.items-center.justify-center.gap-x-6
        a.rounded-md.bg-indigo-600.text-sm.font-semibold.text-white.shadow-xs(
          class="px-3.5 py-2.5 hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" 
          href="/topics"
          ) Go back home
        a.text-sm.font-semibold.text-gray-900(href="#")
          | Contact support
          span(aria-hidden="true") →

block script 
  script(src="/client/js/script.js")