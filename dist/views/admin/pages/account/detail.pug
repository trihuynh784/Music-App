extends ../../layouts/default.pug 

block main 
  if (role.permissions.includes("account_view"))
    .container.py-5
    .card.shadow
      .card-header.bg-primary.text-white
        h4.mb-0.p-2 Chi tiết tài khoản
      .card-body
        .mb-3.row
          label.col-sm-3.col-form-label Họ và tên:
          .col-sm-9
            p.form-control-plaintext #{account.fullName}
        .mb-3.row
          label.col-sm-3.col-form-label Email:
          .col-sm-9
            p.form-control-plaintext #{account.email}

        .mt-4.text-end
          a.btn.btn-warning.me-2(href=`/${prefixAdmin}/accounts/edit/${account.slug}`) Chỉnh sửa
          a.btn.btn-secondary(href=`/${prefixAdmin}/accounts`) Quay lại danh sách
          
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")