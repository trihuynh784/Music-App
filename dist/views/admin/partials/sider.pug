sider(tabindex=0)
  a.home-link(href="/admin/dashboard")
    img.my-brand(src="/admin/uploads/brand.jpg", alt="my-brand")

  ul.sider-nav
    li.sider-nav-title NAVIGATION

    li.sider-nav-item
      a.sider-nav-link(
        href=`/${prefixAdmin}/dashboard`
      )
        i.fa-solid.fa-house
        span Dashboards 

    li.sider-nav-title APP

    li.sider-nav-item
      a.sider-nav-link.d-flex.align-items-center(
        data-item="ecommerce"
      )
        i.fa-solid.fa-store
        span Quản lý
        span.fa-solid.fa-chevron-right.menu-arrow
      #sidebarEcommerce.collapse
        ul.sider-nav-second-level
          if (role.permissions.includes("topic_view"))
            li
              a(href=`/${prefixAdmin}/topics`) Danh sách chủ đề
          if (role.permissions.includes("song_view"))
            li
              a(href=`/${prefixAdmin}/songs`) Danh sách bài hát
          if (role.permissions.includes("singer_view"))
            li
              a(href=`/${prefixAdmin}/singers`) Danh sách ca sĩ

    li.sider-nav-item
      a.sider-nav-link.d-flex.align-items-center(
        data-item="account"
      )
        i.fa-regular.fa-circle-question
        span Phân quyền
        span.fa-solid.fa-chevron-right.menu-arrow
      #sidebarAccount.collapse
        ul.sider-nav-second-level
          if (role.permissions.includes("account_view"))
            li
              a(href=`/${prefixAdmin}/accounts`) Tài khoản
          if (role.permissions.includes("role_view"))
            li
              a(href=`/${prefixAdmin}/roles`) Nhóm quyền
          if (role.permissions.includes("role-permission_view"))
            li
              a(href=`/${prefixAdmin}/roles/permissions`) Phân quyền

