extends ../../layouts/auth.pug 
include ../../mixins/alert.pug 

block main 
  +alert-error()

  section.bg-gray-50(class='dark:bg-gray-900')
    .flex.flex-col.items-center.justify-center.px-6.mx-auto(class="lg:py-0")
      a.flex.items-center.mb-6.text-2xl.font-semibold.text-gray-900(
        class="dark:text-white" 
        href="#"
      )
        i.fa-brands.fa-spotify.w-8.h-8.mr-2.justify-center.items-center(class="flex!")
        span Spytifort
      .w-full.bg-white.rounded-lg.shadow(class="dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700")
        .p-6.space-y-4(class='md:space-y-6 sm:p-8')
          h1.text-xl.font-bold.leading-tight.tracking-tight.text-gray-900(class='md:text-2xl dark:text-white')
            | Create an account
          form.space-y-4(class='md:space-y-6' action='/user/signup' method="POST")
            div 
              label.block.mb-2.text-sm.font-medium.text-gray-900(for='fullName' class='dark:text-white') Your name
              input#fullName.bg-gray-50.border.border-gray-300.text-gray-900.text-sm.rounded-lg.block.w-full(type='text' name='fullName' class='focus:ring-primary-600 focus:border-primary-600 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' placeholder='Mark Zuckerburg' required='')
            div
              label.block.mb-2.text-sm.font-medium.text-gray-900(for='email' class='dark:text-white') Your email
              input#email.bg-gray-50.border.border-gray-300.text-gray-900.text-sm.rounded-lg.block.w-full(type='email' name='email' class='focus:ring-primary-600 focus:border-primary-600 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' placeholder='name@company.com' required='')
            div
              label.block.mb-2.text-sm.font-medium.text-gray-900(for='password' class='dark:text-white') Password
              input#password.bg-gray-50.border.border-gray-300.text-gray-900.text-sm.rounded-lg.block.w-full(type='password' name='password' placeholder='••••••••' class='focus:ring-primary-600 focus:border-primary-600 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' required='' autocomplete="off")
            div
              label.block.mb-2.text-sm.font-medium.text-gray-900(for='confirm-password' class='dark:text-white') Confirm password
              input#confirm-password.bg-gray-50.border.border-gray-300.text-gray-900.text-sm.rounded-lg.block.w-full(type='password' name='confirm-password' placeholder='••••••••' class='focus:ring-primary-600 focus:border-primary-600 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' required='' autocomplete="off")
            .flex.items-start
              .flex.items-center.h-5
                input#terms.w-4.h-4.border.border-gray-300.rounded.bg-gray-50(aria-describedby='terms' type='checkbox' class='focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800' required='' name="terms")
              .ml-3.text-sm
                label.font-light.text-gray-500(for='terms' class='dark:text-gray-300')
                  | I accept the 
                  a.font-medium.text-primary-600(class='hover:underline dark:text-primary-500' href='#') Terms and Conditions
            button.w-full.text-white.bg-primary-600.font-medium.rounded-lg.text-sm.px-5.text-center(type='submit' class='hover:bg-gray-900 focus:ring-4 focus:outline-none focus:ring-primary-300 py-2.5 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800') Create an account
            p.text-sm.font-light.text-gray-500(class='dark:text-gray-400')
              | Already have an account? 
              a.font-medium.text-primary-600(href='#' class='hover:underline dark:text-primary-500') Login here
              
