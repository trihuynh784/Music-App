extends ../../layouts/default.pug 

block main 
  if (role.permissions.includes("role_view"))
    .container.py-5
    .card.shadow
      .card-header.bg-primary.text-white
        h4.mb-0.p-2 Chi tiết nhóm quyền
      .card-body
        .mb-3.row
          label.col-sm-3.col-form-label Tiêu đề:
          .col-sm-9
            p.form-control-plaintext #{role.title}
        .mb-3.row
          label.col-sm-3.col-form-label Mô tả:
          .col-sm-9
            p.form-control-plaintext #{role.description}

        .mt-4.text-end
          a.btn.btn-warning.me-2(href=`/${prefixAdmin}/roles/edit/${role.slug}`) Chỉnh sửa
          a.btn.btn-secondary(href=`/${prefixAdmin}/roles`) Quay lại danh sách
          
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")